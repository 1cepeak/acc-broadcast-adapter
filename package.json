{
  "name": "@icepeak/acc-broadcast-adapter",
  "version": "1.1.0",
  "description": "Node.js adapter for Assetto Corsa Competizione Broadcast API",
  "keywords": [
    "assetto corsa",
    "acc",
    "broadcast api",
    "adapter",
    "1cepeak"
  ],
  "homepage": "https://github.com/1cepeak/acc-broadcast-adapter",
  "bugs": "https://github.com/1cepeak/acc-broadcast-adapter/issues",
  "license": "MIT",
  "author": "Nikita Usov <foxwel.info@gmail.com>",
  "type": "module",
  "main": "dist/adapter.cjs",
  "module": "dist/adapter.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/adapter.js",
      "require": "./dist/adapter.cjs"
    }
  },
  "typesVersions": {
    "*": {
      ".": ["./dist/types/index.d.ts"]
    }
  },
  "files": [
    "dist/",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "vite build --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest run --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^22.17.2",
    "@vitest/coverage-v8": "^3.2.4",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lodash": "^4.17.21",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
