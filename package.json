{
  "name": "@1cepeak/acc-broadcast-adapter",
  "version": "1.0.0-alpha.1",
  "description": "Node.js adapter for Assetto Corsa Competizione Broadcast API",
  "keywords": [
    "assetto corsa",
    "acc",
    "broadcast api",
    "adapter",
    "1cepeak"
  ],
  "homepage": "https://github.com/1cepeak/acc-broadcast-adapter",
  "bugs": "https://github.com/1cepeak/acc-broadcast-adapter/issues",
  "license": "MIT",
  "author": "Nikita Usov <foxwel.info@gmail.com>",
  "type": "module",
  "main": "dist/adapter.cjs",
  "module": "dist/adapter.js",
  "types": "dist/types/index.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "vite build --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "commit": "cz",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^22.17.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lodash": "^4.17.21",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": "^22.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
